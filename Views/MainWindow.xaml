                <StackPanel
                    Grid.Row="4"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Style="{DynamicResource ShowNumPad}">
                    <Rectangle Width="32" />
                    <Button
                        x:Name="NumPad0"
                        Width="128"
                        DataContext="{Binding CurrentMap.NumPad0}"
                        Style="{DynamicResource KeyButton}"
                        Tag="0" />
                    <Button
                        x:Name="Decimal"
                        DataContext="{Binding CurrentMap.Decimal}"
                        Style="{DynamicResource KeyButton}"
                        Tag="." />
                </StackPanel>
            </Grid>
        </Viewbox>

        <!--  大量のボタンを一斉にアニメーションさせる為の隠しオブジェクト  -->
        <Viewbox
            x:Name="KeyButtonRef"
            IsEnabled="{Binding IsChangeMap}"
            Visibility="Collapsed">
            <Viewbox.Style>
                <Style TargetType="Viewbox">
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
                    <Setter Property="Opacity" Value="1" />
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TransformGroup>
                                <TranslateTransform Y="0" />
                                <ScaleTransform ScaleX="1" />
                            </TransformGroup>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsChangeMap}" Value="true">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource OnBeforeChangeMap}" />

                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource OnAfterChangeMap}" />
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Viewbox.Style>
        </Viewbox>


    </Grid>

</Window>
