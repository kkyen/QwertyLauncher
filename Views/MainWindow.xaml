                        Tag="]" />
                </StackPanel>
                <StackPanel
                    Grid.Row="4"
                    Grid.Column="0"
                    Orientation="Horizontal"
                    Style="{DynamicResource ShowQwerty}">
                    <Rectangle Width="80" />
                    <Button
                        x:Name="Z"
                        DataContext="{Binding CurrentMap.Z}"
                        Style="{DynamicResource KeyButton}"
                        Tag="Z" />
                    <Button
                        x:Name="X"
                        DataContext="{Binding CurrentMap.X}"
                        Style="{DynamicResource KeyButton}"
                        Tag="X" />
                    <Button
