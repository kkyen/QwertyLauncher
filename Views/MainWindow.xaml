                        Tag="9" />
                </StackPanel>
                <StackPanel
                    Grid.Row="2"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Style="{DynamicResource ShowNumPad}">
                    <Rectangle Width="32" />
                    <Button
                        x:Name="NumPad4"
                        DataContext="{Binding CurrentMap.NumPad4}"
                        Style="{DynamicResource KeyButton}"
                        Tag="4" />
                    <Button
                        x:Name="NumPad5"
                        DataContext="{Binding CurrentMap.NumPad5}"
