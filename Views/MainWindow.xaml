                        Style="{DynamicResource KeyButton}"
                        Tag="P" />
                    <Button
                        x:Name="Oemtilde"
                        DataContext="{Binding CurrentMap.Oemtilde}"
                        Style="{DynamicResource KeyButton}"
                        Tag="@" />
                    <Button
                        x:Name="OemOpenBrackets"
                        DataContext="{Binding CurrentMap.OemOpenBrackets}"
                        Style="{DynamicResource KeyButton}"
                        Tag="[" />

                </StackPanel>
                <StackPanel
