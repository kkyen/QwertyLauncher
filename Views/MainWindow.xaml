<Window
    x:Class="QwertyLauncher.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QwertyLauncher"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="window"
    Title="QwertyLauncher"
    Width="{Binding MainWindowWidth, Mode=TwoWay}"
    Height="{Binding MainWindowHeight, Mode=TwoWay}"
    d:DataContext="{d:DesignInstance Type=local:ViewModel}"
    AllowsTransparency="True"
    Background="Transparent"
    BorderThickness="0"
    Left="{Binding MainWindowLeft, Mode=TwoWay}"
    ShowInTaskbar="False"
    Top="{Binding MainWindowTop, Mode=TwoWay}"
    Topmost="True"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MainWindowResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Storyboard x:Key="OnBeforeChangeMap" Completed="ChangeMap">
                <DoubleAnimation
                    Storyboard.TargetProperty="(UIElement.Opacity)"
                    To="0"
                    Duration="0:0:0.084" />
                <DoubleAnimation
                    Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.Y)"
                    From="0"
                    To="24"
                    Duration="0:0:0.084" />

            </Storyboard>
            <Storyboard x:Key="OnAfterChangeMap">
                <DoubleAnimation
                    Storyboard.TargetProperty="(UIElement.Opacity)"
                    From="0"
                    To="1"
                    Duration="0:0:0" />
                <DoubleAnimation
                    Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.Y)"
                    From="0"
                    To="0"
                    Duration="0:0:0" />
                <DoubleAnimation
                    Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleX)"
                    From="0"
                    To="1"
                    Duration="0:0:0.084" />
                <DoubleAnimation
                    Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleY)"
                    From="0"
                    To="1"
                    Duration="0:0:0.084" />
            </Storyboard>

        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="BackgroundArea" Background="Transparent">
        <Viewbox
            Height="{Binding MainWindowHeight, Mode=TwoWay}"
            Margin="2,0,2,4"
            VerticalAlignment="Bottom">
            <Viewbox.Style>
                <Style TargetType="Viewbox">
                    <Setter Property="Opacity" Value="1" />
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TransformGroup>
                                <TranslateTransform Y="0" />
                                <ScaleTransform ScaleX="1" />
                            </TransformGroup>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding MainWindowVisibility}" Value="Visible">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource OpenEffect}" />
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource CloseEffect}" />
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Viewbox.Style>
            <Grid
                x:Name="KeyArea"
                Grid.Row="1"
                Margin="1,1,0,0"
                FocusVisualStyle="{x:Null}"
                Focusable="True"
                GotKeyboardFocus="KeyArea_GotKeyboardFocus"
                InputMethod.IsInputMethodEnabled="False"
                LostKeyboardFocus="KeyArea_LostKeyboardFocus">

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Grid.Column="0"
                    Orientation="Horizontal"
                    Style="{DynamicResource ShowFunction}">
                    <Rectangle Width="64" Height="96" />
                    <Button
                        x:Name="F1"
                        DataContext="{Binding CurrentMap.F1}"
                        Style="{DynamicResource KeyButton}"
                        Tag="F1" />
                    <Button
                        x:Name="F2"
                        DataContext="{Binding CurrentMap.F2}"
                        Style="{DynamicResource KeyButton}"
                        Tag="F2" />
                    <Button
                        x:Name="F3"
                        DataContext="{Binding CurrentMap.F3}"
                        Style="{DynamicResource KeyButton}"
                        Tag="F3" />
                    <Button
                        x:Name="F4"
                        DataContext="{Binding CurrentMap.F4}"
                        Style="{DynamicResource KeyButton}"
                        Tag="F4" />
                    <Rectangle Width="32" />
                    <Button
                        x:Name="F5"
                        DataContext="{Binding CurrentMap.F5}"
                        Style="{DynamicResource KeyButton}"
                        Tag="F5" />
                    <Button
                        x:Name="F6"
                        DataContext="{Binding CurrentMap.F6}"
                        Style="{DynamicResource KeyButton}"
                        Tag="F6" />
                    <Button
                        x:Name="F7"
                        DataContext="{Binding CurrentMap.F7}"
                        Style="{DynamicResource KeyButton}"
                        Tag="F7" />
                    <Button
                        x:Name="F8"
                        DataContext="{Binding CurrentMap.F8}"
                        Style="{DynamicResource KeyButton}"
                        Tag="F8" />
                    <Rectangle Width="32" />
                    <Button
                        x:Name="F9"
                        DataContext="{Binding CurrentMap.F5}"
                        Style="{DynamicResource KeyButton}"
                        Tag="F9" />
                    <Button
                        x:Name="F10"
                        DataContext="{Binding CurrentMap.F6}"
                        Style="{DynamicResource KeyButton}"
                        Tag="F10" />
                    <Button
                        x:Name="F11"
                        DataContext="{Binding CurrentMap.F7}"
                        Style="{DynamicResource KeyButton}"
                        Tag="F11" />
                    <Button
                        x:Name="F12"
                        DataContext="{Binding CurrentMap.F8}"
                        Style="{DynamicResource KeyButton}"
                        Tag="F12" />
                </StackPanel>
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Horizontal"
                    Style="{DynamicResource ShowQwerty}">
                    <Button
                        x:Name="D1"
