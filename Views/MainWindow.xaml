                        Style="{DynamicResource KeyButton}"
                        Tag="/" />
                    <Button
                        x:Name="OemBackslash"
                        DataContext="{Binding CurrentMap.OemBackslash}"
                        Style="{DynamicResource KeyButton}"
                        Tag="\" />
                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Style="{DynamicResource ShowNumPad}">
                    <Rectangle Width="32" />
                    <Button
                        x:Name="NumPad7"
                        DataContext="{Binding CurrentMap.NumPad7}"
                        Style="{DynamicResource KeyButton}"
                        Tag="7" />
                    <Button
                        x:Name="NumPad8"
                        DataContext="{Binding CurrentMap.NumPad8}"
                        Style="{DynamicResource KeyButton}"
                        Tag="8" />
                    <Button
                        x:Name="NumPad9"
                        DataContext="{Binding CurrentMap.NumPad9}"
